generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum WishType {
  protocol
  dapp
  tool
}

model Wish {
  id          Int      @id @default(autoincrement())
  title       String
  author      String?
  description String?
  resource    String?
  counter     Int      @default(0)
  date        DateTime @default(now())
  type        WishType
}
